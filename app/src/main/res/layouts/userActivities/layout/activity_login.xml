<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userActivity.LoginActivity"
    android:background="@drawable/frontpage">

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageButton
            android:id="@+id/logo1"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="@color/transparent">
        </ImageButton>

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/logo1"
            android:visibility="visible">
            <!--            gone-->

            <TextView
                android:id="@+id/login_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="30sp"
                android:layout_marginTop="1dp" />


            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_txt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@color/white"
                        android:text="phone number:"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"/>

                    <EditText
                        android:id="@+id/Ulogin_username"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/et_bg"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:hint="phone number"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_marginTop="5dp"
                        android:inputType="number"
                        android:drawableRight="@drawable/username_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@color/white"
                        android:text="password:"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        android:id="@+id/Ulogin_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/et_bg"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_marginTop="5dp"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:drawableRight="@drawable/password_icon"/>

                    <CheckBox
                        android:id="@+id/Ucheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:outlineSpotShadowColor="@color/white"
                        android:textColor="@color/white"
                        android:text="remember password?"
                        android:layout_marginTop="10dp"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/Ulogin_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1"
                android:layout_marginTop="30dp"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="login now"
                android:textSize="20dp"
                android:background="@drawable/btn_bg"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/r1"
            android:visibility="visible">
            <!--            gone-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Usignup_btn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="don't have an account, sign up!"
                    android:background="@color/transparent"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/Uforgotpassword_btn"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="forgot password?"
                    android:textColor="@android:color/white"
                    android:background="@color/transparent"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="false"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>