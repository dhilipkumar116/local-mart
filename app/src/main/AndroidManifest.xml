<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.localmart">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name="com.example.localmart.HelpActivity" android:label="help centre"/>
        <activity android:name="com.example.localmart.userActivity.orderListActivity" android:label="order list"/>
        <activity android:name="com.example.localmart.userActivity.orderManageActivity" />
        <activity
            android:name="com.example.localmart.orderProductsActivity"
            android:label="order products" />
        <activity
            android:name="com.example.localmart.userActivity.showMoreShopActivity"
            android:label="all shops" />
        <activity
            android:name="com.example.localmart.TermsandCondActivity"
            android:label="terms and conditions" />
        <activity
            android:name="com.example.localmart.userActivity.ShopListActivity"
            android:label="nearby shops" />
        <activity
            android:name="com.example.localmart.userActivity.OfferActivity"
            android:label="special offers" />
        <activity
            android:name="com.example.localmart.userActivity.PlaceOrderActivity"
            android:label="confirmation" />
        <activity
            android:name="com.example.localmart.userActivity.CategoryProductsActivity"
            android:label="categories" />
        <activity
            android:name="com.example.localmart.userActivity.CartActivity"
            android:label="cart products" />
        <activity
            android:name="com.example.localmart.userActivity.WishListActivity"
            android:label="wishlist" />
        <activity
            android:name="com.example.localmart.userActivity.ProductDetailActivity"
            android:label="product details" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.example.localmart.PlacePickerActivity"
            android:label="pick delivery location" />
        <activity
            android:name="com.example.localmart.AddCategoryActivity"
            android:label="select category" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name="com.example.localmart.userActivity.SettingActivity" />
        <activity
            android:name="com.example.localmart.userActivity.UserHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.localmart.userActivity.UserForgotActivity"
            android:label="forgot password" />
        <activity android:name="com.example.localmart.PhoneVerificationActivity" />
        <activity
            android:name="com.example.localmart.userActivity.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.localmart.userActivity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>